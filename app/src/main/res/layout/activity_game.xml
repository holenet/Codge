<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <FrameLayout
        android:id="@+id/fLgame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fLfadeGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@color/background"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cLUI"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iVtitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:scaleX="1.15"
            android:scaleY="1.15"
            app:layout_constraintBottom_toTopOf="@+id/cLcontrol"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2"
            app:srcCompat="@drawable/title" />

        <FrameLayout
            android:id="@+id/fLfade"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/background"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.17155" />

        <ImageButton
            android:id="@+id/bTranking"
            style="@style/ImageButtonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="ranking"
            android:elevation="1dp"
            android:padding="4dp"
            android:src="@drawable/button_trophy"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bTbackLeft"
            style="@style/ImageButtonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="back"
            android:elevation="1dp"
            android:padding="4dp"
            android:src="@drawable/button_left_small"
            android:translationX="10000dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bTsort"
            style="@style/ImageButtonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="sort"
            android:elevation="1dp"
            android:padding="4dp"
            android:src="@drawable/button_sort"
            android:translationX="10000dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.828417" />

        <ImageButton
            android:id="@+id/bTcustom"
            style="@style/ImageButtonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="customizing"
            android:elevation="1dp"
            android:padding="4dp"
            android:src="@drawable/button_custom"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/bTbackRight"
            style="@style/ImageButtonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="back"
            android:elevation="1dp"
            android:padding="4dp"
            android:src="@drawable/button_right_small"
            android:translationX="-10000dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cLranking"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:translationX="-10000dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bTbackLeft">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rVranking"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cLcustom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:translationX="10000dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cLcontrol">

            <android.support.v4.view.ViewPager
                android:id="@+id/vPcustom"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cLcontrol"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

            <android.support.constraint.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageButton
                android:id="@+id/bTleft"
                style="@style/ImageButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="left"
                android:padding="8dp"
                android:src="@drawable/button_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/bTccw"
                style="@style/ImageButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="ccw"
                android:padding="8dp"
                android:src="@drawable/button_ccw"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/bTcw"
                style="@style/ImageButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="cw"
                android:padding="8dp"
                android:src="@drawable/button_cw"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/bTright"
                style="@style/ImageButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="right"
                android:padding="8dp"
                android:src="@drawable/button_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/bTjump"
                style="@style/ImageButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="jump"
                android:padding="8dp"
                android:src="@drawable/button_up"
                android:text="Jump"
                android:translationY="10000dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>